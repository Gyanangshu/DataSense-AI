generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// User model
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  image         String?
  emailVerified DateTime?

  // Week 5: Custom branding
  brandingConfig Json?     // Default branding {logo, primaryColor, secondaryColor, companyName}

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  projects       Project[]
  datasets       Dataset[]
  dashboards     Dashboard[]
  textDocuments  TextDocument[]
  correlations   CorrelationAnalysis[]
  templates      AnalysisTemplate[]
  sharedAnalyses SharedAnalysis[]

  @@map("users")
}

// Project model
model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  datasets    Dataset[]
  dashboards  Dashboard[]
  
  @@index([userId])
  @@map("projects")
}

// Dataset model
model Dataset {
  id          String    @id @default(cuid())
  name        String
  description String?
  sourceType  String    // 'CSV', 'EXCEL', 'JSON', 'TEXT'
  fileName    String?
  fileSize    Int?
  rowCount    Int?
  columnCount Int?
  
  // Data storage
  data        Json?     // Actual data for small datasets
  dataUrl     String?   // For S3/R2 storage later
  
  // Metadata
  columns     Json?     // Column names
  types       Json?     // Column types
  stats       Json?     // Pre-computed statistics
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  visualizations Visualization[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([userId])
  @@index([projectId])
  @@map("datasets")
}

// Dashboard model
model Dashboard {
  id          String    @id @default(cuid())
  name        String
  description String?
  isPublic    Boolean   @default(false)
  config      Json?
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  visualizations Visualization[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([userId])
  @@index([projectId])
  @@map("dashboards")
}

// Visualization model
model Visualization {
  id          String    @id @default(cuid())
  name        String
  type        String    // 'line', 'bar', 'pie', 'scatter'
  config      Json      // Chart configuration

  datasetId   String
  dataset     Dataset   @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  dashboardId String?
  dashboard   Dashboard? @relation(fields: [dashboardId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([datasetId])
  @@index([dashboardId])
  @@map("visualizations")
}

// Text Document model for qualitative analysis
model TextDocument {
  id          String    @id @default(cuid())
  name        String
  description String?
  fileType    String    // 'TXT', 'DOCX', 'PDF'
  fileName    String?
  fileSize    Int?
  wordCount   Int?

  // Text content
  content     String    @db.Text

  // AI Analysis results
  themes      Json?     // Extracted themes
  sentiment   Json?     // Sentiment analysis (positive/negative/neutral scores)
  keywords    Json?     // Extracted keywords
  summary     String?   @db.Text

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@map("text_documents")
}

// Correlation Analysis model for mixed-methods research
model CorrelationAnalysis {
  id          String    @id @default(cuid())
  name        String
  description String?

  // Linked data sources
  datasetId      String?   // Quantitative data
  documentId     String?   // Qualitative data (optional - can correlate just datasets)

  // Analysis results
  correlations   Json?     // Array of correlation findings
  insights       Json?     // AI-generated insights
  narrative      String?   @db.Text // AI-generated narrative explanation

  // Metadata
  config         Json?     // Analysis configuration/parameters

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([datasetId])
  @@index([documentId])
  @@map("correlation_analyses")
}

// Week 5: Analysis Templates
model AnalysisTemplate {
  id            String   @id @default(cuid())
  name          String
  description   String?
  category      String   // 'industry' or 'methodology'
  subcategory   String   // 'customer_feedback', 'employee_survey', 'grounded_theory', etc.

  // Configuration
  config        Json     // { expectedColumns, correlationTypes, insightCategories }
  steps         Json     // Multi-step wizard configuration

  // Metadata
  userId        String?  // null = system template, otherwise user-created
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  isPublic      Boolean  @default(true)
  usageCount    Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([category])
  @@index([userId])
  @@map("analysis_templates")
}

// Week 5: Shared Analyses (for correlations and dashboards)
model SharedAnalysis {
  id              String    @id @default(cuid())
  shareType       String    // 'correlation' or 'dashboard'
  resourceId      String    // correlationId or dashboardId

  // Access control
  shareMode       String    // 'public' or 'private'
  slug            String    @unique // URL-friendly identifier
  password        String?   // Hashed password (bcrypt)
  expiresAt       DateTime? // Optional expiration

  // Custom branding
  brandingConfig  Json?     // { logo: base64, primaryColor: '#hex', secondaryColor: '#hex', companyName: 'string' }

  // Analytics aggregates
  viewCount       Int       @default(0)
  uniqueViewers   String[]  @default([]) // Array of IP hashes

  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  views           ShareView[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([slug])
  @@index([userId])
  @@index([resourceId])
  @@map("shared_analyses")
}

// Week 5: Share View Tracking (Analytics)
model ShareView {
  id                String    @id @default(cuid())
  sharedAnalysisId  String
  sharedAnalysis    SharedAnalysis @relation(fields: [sharedAnalysisId], references: [id], onDelete: Cascade)

  // Analytics data
  viewedAt          DateTime  @default(now())
  ipHash            String    // SHA256 hashed IP (GDPR-compliant)
  userAgent         String?
  referrer          String?
  deviceType        String?   // 'mobile', 'tablet', 'desktop'
  country           String?
  city              String?
  timeSpent         Int?      // Seconds (tracked client-side, sent via beacon)

  @@index([sharedAnalysisId])
  @@index([viewedAt])
  @@map("share_views")
}

// NextAuth v5 models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}